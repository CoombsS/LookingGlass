<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1">

    <display-name>LookingGlassV1</display-name>

    <!-- JSPs default to UTF-8 -->
    <jsp-config>
      <jsp-property-group>
        <url-pattern>*.jsp</url-pattern>
        <page-encoding>UTF-8</page-encoding>
        <trim-directive-whitespaces>true</trim-directive-whitespaces>
      </jsp-property-group>
    </jsp-config>

    <!-- Force UTF-8 on all requests/forwards -->
    <filter>
      <filter-name>EncodingFilter</filter-name>
      <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
      <init-param>
        <param-name>encoding</param-name>
        <param-value>UTF-8</param-value>
      </init-param>
      <init-param>
        <param-name>ignore</param-name>
        <param-value>false</param-value>
      </init-param>
    </filter>
    <filter-mapping>
      <filter-name>EncodingFilter</filter-name>
      <url-pattern>/*</url-pattern>
      <dispatcher>REQUEST</dispatcher>
      <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <!-- Auth Filter -->
    <filter>
      <filter-name>Auth</filter-name>
      <filter-class>lookingGlass.Auth</filter-class>
      <async-supported>true</async-supported>
    </filter>
    <filter-mapping>
      <filter-name>Auth</filter-name>
      <url-pattern>/*</url-pattern>
      <dispatcher>REQUEST</dispatcher>
      <dispatcher>FORWARD</dispatcher>
      <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>

    <!-- Servlets (no annotations) -->
    <servlet>
      <servlet-name>LoginServlet</servlet-name>
      <servlet-class>lookingGlass.LoginServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>LoginServlet</servlet-name>
      <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>JournalSaveServlet</servlet-name>
      <servlet-class>lookingGlass.JournalSaveServlet</servlet-class>
      <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>JournalSaveServlet</servlet-name>
      <url-pattern>/journalsave</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>LogoutServlet</servlet-name>
      <servlet-class>lookingGlass.LogoutServlet</servlet-class>
      <load-on-startup>4</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>LogoutServlet</servlet-name>
      <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>RegisterServlet</servlet-name>
      <servlet-class>lookingGlass.RegisterServlet</servlet-class>
      <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet-mapping>
      <servlet-name>RegisterServlet</servlet-name>
      <url-pattern>/register</url-pattern>
    </servlet-mapping>

<resource-ref>
  <description>DB Connection</description>
  <res-ref-name>jdbc/LookingGlassDB</res-ref-name>
  <res-type>javax.sql.DataSource</res-type>
  <res-auth>Container</res-auth>
</resource-ref>

    <!-- Welcome page -->
    <welcome-file-list>
      <welcome-file>login.jsp</welcome-file>
      <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Session config -->
    <session-config>
      <session-timeout>30</session-timeout>
    </session-config>

    <!-- Error pages -->
    <error-page>
      <error-code>404</error-code>
      <location>/login.jsp</location>
    </error-page>
    <error-page>
      <error-code>500</error-code>
      <location>/error.jsp</location>
    </error-page>
  </web-app>
